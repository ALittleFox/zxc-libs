{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",

  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build" ,"dev", "lint", "test", "e2e"],
        "cacheDirectory": "node_modules/.cache/nx"
      }
    }
  },
  "workspaceLayout": {
    "libsDir": "libs",
    "appsDir": "apps"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        {
          "projects": "self",
          "target": "build"
        },
        {
          "projects": "dependencies",
          "target": "build"
        }
      ]
    },
    "dev": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": "self",
          "target": "dev"
        },
        {
          "projects": "dependencies",
          "target": "dev"
        }
      ],
      "options": {
        "command": "tsup --watch",
        "cwd": "{projectRoot}"
      }
    }
  }
}
