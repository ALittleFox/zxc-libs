{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowJs": true,
    "noEmit": true,
  },
  "include": [
    "packages/**/*",
    "components/**/*",
    "tsup.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "**/templates/**/*"
  ]
}