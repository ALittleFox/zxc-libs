{
  "name": "@zxc/cli",
  "root": "packages/cli",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ],
      "options": {
        "command": "tsup",
        "cwd": "packages/cli"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup --watch", 
        "cwd": "packages/cli"
      }
    },
     "dev:cli": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx dev @zxc/utils",
          "nx dev @zxc/cli"
        ],
        "parallel": true
      }
    }
  }
}