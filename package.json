{
  "name": "@zxc/libs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    
    "lint:biome": "biome check . 2>&1 | tee .errors/biome_errors.txt",
    "spellcheck": "cspell --dot --gitignore --color --cache --show-suggestions",
    "format:biome": "biome format --write",
    "commit": "git-cz",
    "prepare": "husky",
    
    "graph": "nx graph",
    
    "build:cli": "nx build @zxc/cli",
    "build:all":"nx run-many --target=build --all",
    "build:affected":"nx affected --target=build",
    "reset":"nx reset",
    "dev:cli":"nx dev @zxc/cli"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.3.0",
    "@zxc/cli": "workspace:*",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.0",
    "cz-git": "^1.12.0",
    "husky": "^9.1.7",
    "typescript": "^5.9.2",
    "nx": "19.8.14"
  },
  "keywords": [],
  "author": "Docscript <zxcdocscript@gmail.com>",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0"
}